---
import JavaIcon from '../assets/icons/JavaIcon.astro';
import CSSIcon from '../assets/icons/CSSIcon.astro';
import Link from "../assets/icons/Link.astro";
import LinkButton from "./LinkButton.astro"
import GitHub from "../assets/icons/GitHubIcon.astro"
import IonicIcon from "../assets/icons/IonicIcon.astro"
import AngularIcon from "../assets/icons/AngularIcon.astro"
import FirebaseIcon from "../assets/icons/FirebaseIcon.astro"
import HtmlIcon from "../assets/icons/HtmlIcon.astro"
import PHPIcon from "../assets/icons/PHPIcon.astro"
import TailwindIcon from "../assets/icons/TailwindIcon.astro"
import JavaScriptIcon from "../assets/icons/JavaScriptIcon.astro"
import SassIcon from "../assets/icons/SassIcon.astro"
import LinkButtonHover from "./LinkButtonHover.astro";

const TAGS = {
    JAVA: {
        name: "Java",
        class: "bg-[#243b49] text-white border border-white/50",
        icon: JavaIcon,
    },

    CSS: {
        name: "CSS",
        class: "bg-[#1572b7] text-white border border-white/50",
        icon: CSSIcon,
    },

    JAVAFX: {
        name: "JavaFX",
        class: "bg-[#243b49] text-white border border-white/50",
        icon: JavaIcon,
    },

    IONIC: {
        name: "IONIC",
        class: "bg-[#176bff] text-white border border-white/80",
        icon: IonicIcon,
    },

    ANGULAR: {
        name: "Angular",
        class: "bg-[#5b16aa] text-white border border-gray-500/80",
        icon: AngularIcon,
    },

    FIREBASE: {
        name: "Firebase",
        class: "bg-[#6b1401] text-white border border-orange-500/80",
        icon: FirebaseIcon,
    },

    HTML: {
        name: "HTML",
        class: "bg-[#6d2813] text-white",
        icon: HtmlIcon,
    },

    PHP: {
        name: "PHP",
        class: "bg-[#535972] text-white border border-gray-800/80",
        icon: PHPIcon,
    },

    TAILWINDCSS: {
        name: "TailwindCSS",
        class: "bg-[#12687a] text-white border border-white/80",
        icon: TailwindIcon,
    },

    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-[#685f22] text-white border border-gray-800",
        icon: JavaScriptIcon,
    },

    SASS: {
        name: "Sass",
        class: "bg-[#703452] text-white border border-white/50",
        icon: SassIcon,
    },

}
const PROJECTS = [
    {
        title: "Portal Carnes Covap",
        description: "Refactorización del front-end, añadiendo soporte multidioma " +
            "y mejoras en la integración de APIs.",
        link: "https://www.carnescovap.com/",
        image: "/projects/CarnesCovap.webp",
        arial_label: "Portal de Carnes Covap",
        new: true,
        tags: [TAGS.PHP, TAGS.SASS, TAGS.JAVASCRIPT],
    },

    {
        title: "Portal Làctia",
        description: "Migración de WordPress a un nuevo frameworks, con rediseño completo del front-end y soporte multiidioma.",
        link: "https://lactia.cat/es/",
        image: "/projects/Lactia.webp",
        arial_label: "Portal de Làctia",
        new: true,
        tags: [TAGS.PHP, TAGS.SASS, TAGS.JAVASCRIPT],
    },


    {
        title: "Transly App",
        description: "PWA para consultar tarifas de trenes. Búsqueda de billetes y visualización de precios.",
        github: "https://github.com/JavviFdeez/translyapp.git",
        image: "/projects/Transly.webp",
        arial_label: "Aplicación Transly",
        new: false,
        tags: [TAGS.IONIC, TAGS.ANGULAR, TAGS.FIREBASE],
    },

    {
        title: "CV Generator",
        description: "Aplicación para crear y personalizar currículums. "
            + "Exportación a PDF incluida.",
        github: "https://github.com/JavviFdeez/CVGenerator.git",
        image: "/projects/CVGenerator.webp",
        arial_label: "Generador de CV",
        new: false,
        tags: [TAGS.JAVA, TAGS.CSS, TAGS.JAVAFX],
    },
]
---

<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({image, title, description, tags, link, github, arial_label, new: isNew}) => (
                <article class="flex flex-col space-x-0 space-y-8 md:flex-row md:space-x-8 md:space-y-0">
                    <div class="w-full md:w-1/2">
                        <div class="relative group flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl lg:border lg:border-gray-800">
                            <a href={link || github} aria-label={arial_label} target="_blank" rel="noopener noreferrer">
                                <img alt="" class="hover:opacity-70" loading="lazy" src={image}/>
                                {isNew && (
                                        <span class="absolute top-2 right-2 bg-gradient-to-r from-black border border-purple-500 text-white text-xs font-bold px-2 py-0.5 rounded-full shadow-lg z-10 uppercase group-hover:opacity-0">✨ Nuevo
                                        </span>
                                )}
                                <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300
            flex flex-col items-center justify-center space-y-2 text-white text-center">
                                    {github && (
                                            <LinkButtonHover href={github} aria-label={arial_label}>
                                                <GitHub class="size-6"/>
                                                Code
                                            </LinkButtonHover>
                                    )}

                                    {link && (
                                            <LinkButtonHover href={link} aria-label={arial_label}>
                                                <Link class="size-4"/>
                                                Preview
                                            </LinkButtonHover>
                                    )}
                                </div>

                            </a>
                        </div>
                    </div>

                    <div class="w-full md:w-1/2 md:max-w-lg">
                        <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                            {title}
                        </h3>
                        <div class="flex flex-wrap mt-2">
                            <ul class="flex flex-row mb-2 gap-x-2">
                                {tags.map((tag) => (
                                        <li>
                                    <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                                        <tag.icon class="size-4"/>
                                        {tag.name}
                                    </span>
                                        </li>
                                ))}
                            </ul>

                            <div class="text-xl mt-2 text-gray-700 dark:text-gray-400">{description}</div>
                            <footer class="flex items-end justify-start mt-4 gap-x-4">
                                {github && (
                                        <LinkButton href={github} aria-label={arial_label}>
                                            <GitHub class="size-6"/>
                                            Code
                                        </LinkButton>
                                )}
                                {link && (
                                        <LinkButton href={link} aria-label={arial_label}>
                                            <Link class="size-4"/>
                                            Preview
                                        </LinkButton>
                                )}
                            </footer>
                        </div>
                    </div>
                </article>
        ))
    }
</div>
