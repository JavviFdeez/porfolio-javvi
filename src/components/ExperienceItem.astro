---
const {date, title, description, location, link} = Astro.props;
interface Props {
    date: string;
    title: string;
    location: string;
    description: string;
    link?: string;
}
---

<div class="bg-gradient-to-tr from-[#121212] to-[#1f1b2e] border dark:border-purple-700/30 rounded-lg p-5 shadow-xl border-glow">

<div class="absolute w-3 h-3 rounded-full mt-13 -start-1.5 border border-white dark:border-gray-900 bg-purple-500"></div>
<time class="mb-1 font-semibold text-lg font-normal leading-none text-purple-500 dark:text-purple-500">{description}</time>
<h3 class="text-white text-lg mt-1">{title}</h3>
<p class="text-gray-300 text-sm leading-relaxed mt-1">{date}</p>
<p class="text-gray-400 text-sm italic mt-1">{location}</p>

</div>