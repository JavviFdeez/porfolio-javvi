---
import MailIcon from "../assets/icons/MailIcon.astro";
import LinkedInIcon from "../assets/icons/LinkedInIcon.astro";
import GitHubIcon from "../assets/icons/GitHubIcon.astro";
import CVIcon from "../assets/CVIcon.astro";
import XIcon from "../assets/icons/XIcon.astro";
import InstaIcon from "../assets/icons/InstaIcon.astro";

const currentYear = new Date().getFullYear();
---

<footer id="footer" class="relative mt-20 w-full">
    <!-- Línea decorativa superior con gradiente -->
    <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-white/10 to-transparent"></div>

    <div class="mx-auto w-full max-w-6xl px-4 py-8 md:py-12">
        <div class="flex flex-col items-center justify-between gap-6 md:flex-row">

            <!-- Copyright -->
            <span class="text-sm text-gray-400 text-center md:text-left font-medium">
                © {currentYear} <span class="text-white">Javier Fernández Fernández</span>
            </span>

            <!-- Redes Sociales -->
            <div class="flex flex-wrap justify-center gap-4">
                <a href="https://linkedin.com/in/javvifernandez" target="_blank" aria-label="LinkedIn"
                   class="group flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
                    <LinkedInIcon class="size-6 group-hover:scale-110 transition-transform duration-300"/>
                </a>

                <a href="mailto:javidez195@gmail.com" aria-label="Email"
                   class="group flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
                    <MailIcon class="size-6 group-hover:scale-110 transition-transform duration-300"/>
                </a>

                <a href="/CurrIculum_Vitae_Javier_Fernandez.pdf" download="CV_Javier_Fernandez.pdf" aria-label="Descargar CV"
                   class="group flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
                    <CVIcon class="size-6 group-hover:scale-110 transition-transform duration-300"/>
                </a>

                <a href="https://github.com/JavviFdeez" target="_blank" aria-label="GitHub"
                   class="group flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
                    <GitHubIcon class="size-6 group-hover:scale-110 transition-transform duration-300"/>
                </a>

                <a href="https://x.com/javvisocials" target="_blank" aria-label="X (Twitter)"
                   class="group flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
                    <XIcon class="size-6 group-hover:scale-110 transition-transform duration-300"/>
                </a>

                <a href="https://www.instagram.com/javvisocials/" target="_blank" aria-label="Instagram"
                   class="group flex items-center justify-center p-2 rounded-lg text-gray-400 hover:text-white hover:bg-white/10 transition-all duration-300">
                    <InstaIcon class="size-6 group-hover:scale-110 transition-transform duration-300"/>
                </a>
            </div>
        </div>
    </div>
</footer>