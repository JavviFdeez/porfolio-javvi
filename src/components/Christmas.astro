        transform: rotate(-15deg);
        z-index: 20;
        filter: drop-shadow(0 4px 6px rgba(0,0,0,0.3));
        animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
        0%, 100% { transform: rotate(-15deg) translateY(0); }
        50% { transform: rotate(-10deg) translateY(-5px); }
    }
</style>